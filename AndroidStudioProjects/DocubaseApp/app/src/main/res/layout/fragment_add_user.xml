<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentAddUser">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="24dp"
                android:paddingTop="24dp"
                android:text="Ajouter un utilisateur"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/et_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edit_text_simple"
                android:hint="Nom"
                android:textSize="16dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/et_prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edit_text_simple"
                android:hint="Prénom"
                android:textSize="16dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/et_date_naissance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:background="@drawable/edit_text_simple"
                android:hint="Date naissance"
                android:textSize="16dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/et_numero_secret"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edit_text_simple"
                android:hint="Numéro secret"
                android:textSize="16dp"
                android:layout_marginBottom="6dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp">

                <Spinner
                    android:id="@+id/spinnerCategorie"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/colorBackground"
                    style="@style/SpinnerTheme"
                    android:entries="@array/catgorie_affichage"
                    android:spinnerMode="dialog"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/et_departement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edit_text_simple"
                android:hint="Département"
                android:textSize="16dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/et_date_etude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edit_text_simple"
                android:hint="année d'étude"
                android:textSize="16dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/et_specialite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edit_text_simple"
                android:hint="Spécialité"
                android:textSize="16dp"
                android:layout_marginBottom="6dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp">


                <EditText
                    android:id="@+id/et_upload_doc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_upload_background"
                    android:backgroundTint="@color/design_default_color_background"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:hint="Document"
                    android:textColor="@color/colorBackground"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/layout_upload"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_upload"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_upload"
                    android:backgroundTint="@color/design_default_color_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ic_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:padding="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_upload"
                        app:tint="@color/colorPrimaryDark" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edit_text_simple"
                android:hint="Mot de passe"
                android:textSize="16dp"
                android:layout_marginBottom="6dp"/>

            <Button
                android:id="@+id/bt_add"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/bt_rounded"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="0dp"
                android:text="Ajouter"
                android:textAllCaps="false"
                android:textColor="@color/design_default_color_background"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginBottom="24dp"
                />


        </LinearLayout>
    </ScrollView>

</FrameLayout>